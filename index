<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TIMPA DÜNYASI</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #222;
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            overflow: hidden;
            user-select: none;
        }
        #gameCanvas {
            background: linear-gradient(to bottom, #87CEEB 0%, #E0F6FF 100%);
            border: 4px solid #fff;
            display: none;
            box-shadow: 0 0 20px rgba(0,0,0,0.5);
        }
        #ui-layer {
            position: absolute;
            text-align: center;
            z-index: 10;
            background: rgba(0, 0, 0, 0.8);
            padding: 20px;
            border-radius: 15px;
            max-width: 800px;
        }
        .btn {
            padding: 12px 24px;
            margin: 10px;
            font-size: 18px;
            cursor: pointer;
            background: #ff4757;
            border: none;
            color: white;
            font-weight: bold;
            border-radius: 25px;
            transition: transform 0.2s;
        }
        .btn:hover { transform: scale(1.05); background: #ff6b81; }
        h1 { color: #ffa502; text-shadow: 3px 3px #000; margin-bottom: 5px; font-size: 36px; }
        .char-select-container {
            display: flex;
            justify-content: center;
            gap: 15px;
            flex-wrap: wrap;
        }
        .char-card {
            border: 2px solid #555;
            padding: 15px;
            cursor: pointer;
            background: #2f3542;
            width: 140px;
            border-radius: 10px;
            transition: all 0.3s;
        }
        .char-card:hover { background: #57606f; border-color: #ffa502; transform: translateY(-5px); }
        .char-title { font-weight: bold; margin-bottom: 5px; color: #fff; }
        .char-desc { font-size: 12px; color: #ccc; }
        .controls-hint { margin-top: 20px; color: #dfe4ea; font-size: 14px; }
    </style>
</head>
<body>

    <div id="ui-layer">
        <h1>TIMPA DÜNYASI</h1>
        <div id="menu">
            <p style="font-size:18px; margin-bottom:20px;">Günü kurtaracak kahramanı seç:</p>
            <div class="char-select-container">
                <div class="char-card" onclick="startGame('ahmet')">
                    <div class="char-title">AHMET</div>
                    
                </div>
                <div class="char-card" onclick="startGame('reha')">
                    <div class="char-title">REHA</div>
                    
                </div>
                <div class="char-card" onclick="startGame('bilge')">
                    <div class="char-title">BİLGE</div>
                   
                </div>
                <div class="char-card" onclick="startGame('ceyda')">
                    <div class="char-title">CEYDA</div>
                    
                </div>
            </div>
            <div class="controls-hint">
                YÖN TUŞLARI ile yürü • BOŞLUK ile zıpla
            </div>
        </div>

        <div id="game-over" style="display:none;">
            <h2 style="color:#ff4757; font-size: 40px; margin: 10px;">YAKALANDIN!</h2>
            <p id="death-reason" style="font-size: 20px; color: #fff;"></p>
            <button class="btn" onclick="location.reload()">Tekrar Dene</button>
        </div>

        <div id="victory" style="display:none;">
            <h2 style="color:#2ed573; font-size: 40px;">EVE ULAŞTIN!</h2>
            <p style="font-size: 18px;">Tüm revizyonları ve gürültüyü atlattın.</p>
            <button class="btn" onclick="location.reload()">Başa Dön</button>
        </div>
    </div>

    <canvas id="gameCanvas" width="800" height="450"></canvas>

<script>
    const canvas = document.getElementById('gameCanvas');
    const ctx = canvas.getContext('2d');
    const ui = document.getElementById('ui-layer');
    const menu = document.getElementById('menu');
    const gameOverScreen = document.getElementById('game-over');
    const victoryScreen = document.getElementById('victory');

    // OYUN AYARLARI
    let gameRunning = false;
    const gravity = 0.6;
    const groundY = 380;
    const levelLength = 5000;
    let cameraX = 0;
    let score = 0;
    let walkCycle = 0; // Animasyon için

    // KAHRAMAN
    const player = {
        x: 50,
        y: groundY - 60,
        width: 40,
        height: 70,
        dx: 0,
        dy: 0,
        speed: 6,
        jumpPower: -13,
        grounded: false,
        type: 'ahmet',
        facingRight: true
    };

    const keys = { right: false, left: false, up: false };
    let enemies = [];

    // DÜŞMAN TİPLERİ
    const enemyTypes = [
        { id: 'art_director', name: 'Art Director', text: 'HATA HATA HATA', w: 60, h: 60, speed: 0 },
        { id: 'beyaz_yakali', name: 'Beyaz Yakalı', text: 'Revizyon!', w: 40, h: 65, speed: 2 },
        { id: 'sakalli', name: 'Sakallı Adam', text: 'Bilge Hanım?', w: 40, h: 65, speed: 1.5 },
        { id: 'atletli', name: 'Atletli Amca', text: 'Çimleri biçme!', w: 45, h: 60, speed: 1 },
        { id: 'teyze', name: 'Yaşlı Teyze', text: '*GÜM*', w: 40, h: 55, speed: 2, jumping: true }
    ];

    // ----- KONTROLLER -----
    document.addEventListener('keydown', (e) => {
        if (!gameRunning) return;
        if (e.code === 'ArrowRight' || e.code === 'KeyD') { keys.right = true; player.facingRight = true; }
        if (e.code === 'ArrowLeft' || e.code === 'KeyA') { keys.left = true; player.facingRight = false; }
        if ((e.code === 'ArrowUp' || e.code === 'Space') && player.grounded) {
            player.dy = player.jumpPower;
            player.grounded = false;
        }
    });

    document.addEventListener('keyup', (e) => {
        if (e.code === 'ArrowRight' || e.code === 'KeyD') keys.right = false;
        if (e.code === 'ArrowLeft' || e.code === 'KeyA') keys.left = false;
    });

    // ----- OYUN DÖNGÜSÜ -----
    function createEnemies() {
        enemies = [];
        let xPos = 500;
        while (xPos < levelLength - 300) {
            xPos += Math.random() * 350 + 300; 
            const type = enemyTypes[Math.floor(Math.random() * enemyTypes.length)];
            enemies.push({
                x: xPos,
                y: groundY - type.h,
                w: type.w,
                h: type.h,
                type: type,
                dy: 0,
                startY: groundY - type.h,
                patrolStart: xPos,
                direction: 1,
                dead: false
            });
        }
    }

    function startGame(charType) {
        player.type = charType;
        menu.style.display = 'none';
        ui.style.display = 'none'; // UI katmanını tamamen gizle (bitişte açarız)
        canvas.style.display = 'block';
        
        player.x = 50;
        player.y = groundY - 70;
        cameraX = 0;
        
        createEnemies();
        gameRunning = true;
        gameLoop();
    }

    function update() {
        if (!gameRunning) return;

        // Oyuncu Hareketi
        if (keys.right) { player.x += player.speed; walkCycle++; }
        if (keys.left) { player.x -= player.speed; walkCycle++; }

        player.dy += gravity;
        player.y += player.dy;

        if (player.y + player.height > groundY) {
            player.y = groundY - player.height;
            player.dy = 0;
            player.grounded = true;
        }

        // Sınırlar ve Kamera
        if (player.x < 0) player.x = 0;
        if (player.x > levelLength) gameWin();
        
        // Kamera hedefi
        let targetCamX = player.x - 200;
        if (targetCamX < 0) targetCamX = 0;
        // Yumuşak kamera geçişi
        cameraX += (targetCamX - cameraX) * 0.1;

        // Düşmanlar
        enemies.forEach(enemy => {
            if (enemy.dead) return;

            // Hareket mantığı (Devriye)
            if (enemy.type.speed > 0) {
                enemy.x += enemy.type.speed * enemy.direction;
                if (Math.abs(enemy.x - enemy.patrolStart) > 150) enemy.direction *= -1;
            }

            // Teyze Zıplaması
            if (enemy.type.jumping) {
                enemy.dy += gravity;
                enemy.y += enemy.dy;
                if (enemy.y > enemy.startY) {
                    enemy.y = enemy.startY;
                    if (Math.random() < 0.03) enemy.dy = -12; // Aniden zıpla
                }
            }

            // Çarpışma
            if (rectIntersect(player.x + 10, player.y, player.width - 20, player.height, enemy.x, enemy.y, enemy.w, enemy.h)) {
                // Üstten bastı mı?
                if (player.dy > 0 && player.y + player.height < enemy.y + enemy.h / 2 + 10) {
                    enemy.dead = true;
                    player.dy = -10; // Zıpla
                    score += 100;
                } else {
                    gameOver(enemy.type.text);
                }
            }
        });
    }

    function draw() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        ctx.save();
        ctx.translate(-Math.floor(cameraX), 0);

        // --- ARKA PLAN ---
        // Bulutlar
        drawCloud(100, 100);
        drawCloud(400, 50);
        drawCloud(800, 120);
        drawCloud(cameraX + 600, 80); 

        // Zemin
        ctx.fillStyle = '#5D4037';
        ctx.fillRect(0, groundY, levelLength + 1000, 200);
        // Çim
        ctx.fillStyle = '#76ff03';
        ctx.fillRect(0, groundY, levelLength + 1000, 20);

        // EV (Bitiş)
        drawHouse(levelLength, groundY);

        // --- KARAKTERLERİ ÇİZ (EN ÖNEMLİ KISIM) ---
        
        // Düşmanlar
        enemies.forEach(e => {
            if (!e.dead) drawEnemyCharacter(e);
        });

        // Oyuncu
        drawPlayerCharacter();

        ctx.restore();

        // Puan Tablosu (Sabit)
        ctx.fillStyle = 'black';
        ctx.font = 'bold 20px Arial';
        ctx.fillText("Score: " + score, 20, 30);
    }

    // ---------------------------------------------
    // ----- ÇİZİM FONKSİYONLARI (TİPLEMELER) ------
    // ---------------------------------------------

    function drawPlayerCharacter() {
        const x = player.x;
        const y = player.y;
        const w = player.width;
        const h = player.height;
        const isMoving = keys.left || keys.right;
        const bounce = isMoving ? Math.sin(walkCycle * 0.5) * 3 : 0;

        // Gövde Rengi
        let bodyColor = '#3498db'; // Default
        if (player.type === 'ahmet') bodyColor = '#2c3e50'; // Koyu Gömlek
        if (player.type === 'reha') bodyColor = '#8e44ad'; // Mor Tişört
        if (player.type === 'bilge') bodyColor = '#e17055'; // Ceket
        if (player.type === 'ceyda') bodyColor = '#00b894'; // Yeşil Bluz

        // Bacaklar
        ctx.fillStyle = '#2d3436';
        ctx.fillRect(x + 10, y + h - 20 + bounce, 8, 20); // Sol
        ctx.fillRect(x + 22, y + h - 20 - bounce, 8, 20); // Sağ

        // Gövde
        ctx.fillStyle = bodyColor;
        ctx.fillRect(x + 5, y + 25 + bounce, 30, 35);

        // Kafa (Ten Rengi)
        ctx.fillStyle = '#ffccaa';
        ctx.beginPath();
        ctx.arc(x + 20, y + 15 + bounce, 14, 0, Math.PI * 2);
        ctx.fill();

        // --- KARAKTER ÖZEL DETAYLARI ---
        
        if (player.type === 'ahmet') {
            // Uzun Kır Saç
            ctx.fillStyle = '#95a5a6'; 
            ctx.fillRect(x + 4, y + 5 + bounce, 32, 8); // Tepe
            ctx.fillRect(x + 2, y + 5 + bounce, 8, 30); // Yan Saç Sol
            ctx.fillRect(x + 30, y + 5 + bounce, 8, 30); // Yan Saç Sağ
            // Kır Sakal
            ctx.beginPath();
            ctx.arc(x + 20, y + 22 + bounce, 14, 0, Math.PI, false);
            ctx.fill();
        }
        else if (player.type === 'reha') {
            // Üstler Kel, Yanlar Siyah
            ctx.fillStyle = '#000'; 
            ctx.fillRect(x + 2, y + 10 + bounce, 5, 15); // Yan Saç Sol
            ctx.fillRect(x + 33, y + 10 + bounce, 5, 15); // Yan Saç Sağ
            // Sakal (Siyah)
            ctx.beginPath();
            ctx.arc(x + 20, y + 22 + bounce, 14, 0, Math.PI, false);
            ctx.fill();
        }
        else if (player.type === 'bilge') {
            // Kumral Saç
            ctx.fillStyle = '#cd6133';
            ctx.beginPath();
            ctx.arc(x + 20, y + 12 + bounce, 16, Math.PI, 0); // Üst
            ctx.fill();
            // Gözlük (Önemli)
            ctx.strokeStyle = '#000';
            ctx.lineWidth = 2;
            ctx.beginPath();
            ctx.arc(x + 15, y + 16 + bounce, 3, 0, Math.PI * 2);
            ctx.stroke();
            ctx.beginPath();
            ctx.arc(x + 25, y + 16 + bounce, 3, 0, Math.PI * 2);
            ctx.stroke();
        }
        else if (player.type === 'ceyda') {
            // Kumral Uzun Saç
            ctx.fillStyle = '#d35400';
            ctx.beginPath();
            ctx.arc(x + 20, y + 12 + bounce, 16, Math.PI, 0);
            ctx.fill();
            ctx.fillRect(x+2, y+10+bounce, 8, 25); // Yanlar
            ctx.fillRect(x+30, y+10+bounce, 8, 25);
        }
    }

    function drawEnemyCharacter(e) {
        const x = e.x;
        const y = e.y;
        const type = e.type.id;

        // Konuşma Balonu
        ctx.fillStyle = 'white';
        ctx.strokeStyle = 'black';
        ctx.lineWidth = 1;
        const textW = ctx.measureText(e.type.text).width + 10;
        ctx.fillRect(x - 20, y - 30, textW, 20);
        ctx.strokeRect(x - 20, y - 30, textW, 20);
        ctx.fillStyle = 'black';
        ctx.font = '11px Arial';
        ctx.fillText(e.type.text, x - 15, y - 16);

        if (type === 'art_director') {
            // MAC BİLGİSAYAR KAFA
            ctx.fillStyle = '#bdc3c7'; // Gümüş kasa
            ctx.fillRect(x, y, 60, 50);
            ctx.fillStyle = '#2c3e50'; // Ekran
            ctx.fillRect(x+5, y+5, 50, 35);
            ctx.fillStyle = 'white'; // Elma
            ctx.fillText('', x+25, y+30);
            // Ayak
            ctx.fillStyle = '#7f8c8d';
            ctx.fillRect(x+20, y+50, 20, 10);
        }
        else if (type === 'atletli') {
            // Atletli Amca
            ctx.fillStyle = '#ffccaa'; // Ten
            ctx.fillRect(x+10, y, 25, 60); // Vücut
            ctx.fillStyle = 'white'; // Atlet
            ctx.fillRect(x+10, y+20, 25, 25);
            // Kafa (Kel)
            ctx.fillStyle = '#ffccaa';
            ctx.beginPath();
            ctx.arc(x+22, y+10, 10, 0, Math.PI*2);
            ctx.fill();
        }
        else if (type === 'sakalli') {
            // Kara saç kara sakal
            ctx.fillStyle = '#333'; // Takım elbise
            ctx.fillRect(x+5, y+20, 30, 45);
            ctx.fillStyle = '#ffccaa'; // Kafa
            ctx.beginPath();
            ctx.arc(x+20, y+10, 12, 0, Math.PI*2);
            ctx.fill();
            ctx.fillStyle = 'black'; // Saç
            ctx.beginPath();
            ctx.arc(x+20, y+8, 13, Math.PI, 0); 
            ctx.fill();
            // Sakal
            ctx.beginPath();
            ctx.arc(x+20, y+14, 12, 0, Math.PI); 
            ctx.fill();
        }
        else if (type === 'teyze') {
            // Beyaz Saçlı Teyze
            ctx.fillStyle = '#8e44ad'; // Mor entari
            ctx.beginPath();
            ctx.moveTo(x+20, y+10);
            ctx.lineTo(x+40, y+55);
            ctx.lineTo(x, y+55);
            ctx.fill();
            // Kafa
            ctx.fillStyle = '#ffccaa';
            ctx.beginPath();
            ctx.arc(x+20, y+10, 10, 0, Math.PI*2);
            ctx.fill();
            // Beyaz Topuz Saç
            ctx.fillStyle = '#ecf0f1';
            ctx.beginPath();
            ctx.arc(x+20, y+6, 11, Math.PI, 0);
            ctx.fill();
            ctx.beginPath();
            ctx.arc(x+20, y-2, 6, 0, Math.PI*2); // Topuz
            ctx.fill();
        }
        else {
            // Beyaz yakalı
            ctx.fillStyle = '#fff'; // Gömlek
            ctx.fillRect(x+5, y+20, 30, 45);
            ctx.fillStyle = '#34495e'; // Kravat
            ctx.fillRect(x+18, y+20, 4, 30);
            // Kafa
            ctx.fillStyle = '#ffccaa';
            ctx.beginPath();
            ctx.arc(x+20, y+10, 12, 0, Math.PI*2);
            ctx.fill();
        }
    }

    function drawCloud(x, y) {
        ctx.fillStyle = 'rgba(255, 255, 255, 0.8)';
        ctx.beginPath();
        ctx.arc(x, y, 30, 0, Math.PI * 2);
        ctx.arc(x + 25, y - 10, 35, 0, Math.PI * 2);
        ctx.arc(x + 50, y, 30, 0, Math.PI * 2);
        ctx.fill();
    }

    function drawHouse(x, y) {
        // Gövde
        ctx.fillStyle = '#e74c3c';
        ctx.fillRect(x, y - 120, 140, 120);
        // Çatı
        ctx.fillStyle = '#c0392b';
        ctx.beginPath();
        ctx.moveTo(x - 10, y - 120);
        ctx.lineTo(x + 70, y - 180);
        ctx.lineTo(x + 150, y - 120);
        ctx.fill();
        // Kapı
        ctx.fillStyle = '#34495e';
        ctx.fillRect(x + 50, y - 60, 40, 60);
        // Yazı
        ctx.fillStyle = 'white';
        ctx.font = 'bold 16px Arial';
        ctx.fillText("HUZURLU EV", x + 20, y - 130);
    }

    function rectIntersect(x1, y1, w1, h1, x2, y2, w2, h2) {
        return x2 < x1 + w1 && x2 + w2 > x1 && y2 < y1 + h1 && y2 + h2 > y1;
    }

    function gameOver(reason) {
        gameRunning = false;
        ui.style.display = 'block';
        menu.style.display = 'none';
        gameOverScreen.style.display = 'block';
        
        let msg = "Engellere takıldın!";
        if (reason.includes("HATA")) msg = "Art Director senin bir hata olduğunu düşünüyor!";
        else if (reason.includes("Revizyon")) msg = "Bitmeyen revizyonlar altında ezildin!";
        else if (reason.includes("Bilge")) msg = "Sorulara cevap vermekten ilerleyemedin!";
        else if (reason.includes("Çim")) msg = "Atletli amca seni fena azarladı!";
        else if (reason.includes("GÜM")) msg = "Teyze üstüne atladı!";
        
        document.getElementById('death-reason').innerText = msg;
    }

    function gameWin() {
        gameRunning = false;
        ui.style.display = 'block';
        menu.style.display = 'none';
        victoryScreen.style.display = 'block';
    }

    function gameLoop() {
        update();
        draw();
        if (gameRunning) requestAnimationFrame(gameLoop);
    }
</script>
</body>
</html>
